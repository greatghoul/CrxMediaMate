{
  "manifest_version": 3,
  "name": "沙雕图",
  "version": "1.0",
  "description": "收集沙雕图片并添加笔记",
  "permissions": ["contextMenus", "clipboardWrite", "clipboardRead", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
